	ORG	0x046E
RES:	WORD	?
RESCONST:	WORD	0x1
RESSTART:	WORD	0x0600
POINT:	WORD	?
AMOUNT:	WORD	0x5
VALSTART:	WORD	0x0640
VALPOINT:	WORD	?
START:
	LD	RESSTART
	ST	POINT
	LD	VALSTART
	ST	VALPOINT
	CALL	TEST0
	CALL	TEST1
	CALL	TEST2
	CALL	TEST3
	CALL	TEST4
	LD	#0x7F
	ST	(POINT)+
	LD	RESSTART
	ST	POINT
	LD	RESCONST
CHECK:	AND	(POINT)+
	LOOP	AMOUNT
	JUMP	CHECK
	ST	RES
	HLT
TESTPASS:	
	LD	RESCONST
	ST	(POINT)+
	RET
TESTFAIL:
	CLA
	ST	(POINT)+
	RET
; TEST0 - умножение на 1
THVAL0:	WORD	0x00A7
TEST0:	NOP
	LD	THVAL0
	ST	(VALPOINT)+
	WORD	0x0F01
	ST	(VALPOINT)+
	CMP	THVAL0
	BEQ	TESTPASS
	JUMP	TESTFAIL
; TEST1 - просто умножение 2-ух чисел
THVAL1:	WORD	0x1E
TEST1:	NOP
	LD	THVAL1
	ST	(VALPOINT)+
	LD	#0x05
	WORD	0x0F06
	ST	(VALPOINT)+
	CMP	THVAL1
	BEQ	TESTPASS
	JUMP	TESTFAIL
; TEST2 - проверка умножения на 0 
THVAL2:	WORD	0x0
TEST2:	NOP
	LD	THVAL2
	ST	(VALPOINT)+
	LD	#0x7A
	WORD	0x0F00
	ST	(VALPOINT)+
	CMP	THVAL2
	BEQ	TESTPASS
	JUMP	TESTFAIL
; TEST3 - умножение 0 на X и zero flag
TEST3:	NOP
	CLA
	ST	(VALPOINT)+
	WORD	0x0F6B
	ST	(VALPOINT)+
	BEQ	TESTPASS
	JUMP	TESTFAIL
	
; TEST4 - большие числа
VAL4:	WORD	0xFFFE
THVAL4:	WORD	0xF414
TEST4:	NOP
	LD	THVAL4
	ST	(VALPOINT)+
	LD	VAL4
	WORD	0xFF6
	ST	(VALPOINT)+
	CMP	THVAL4
	BEQ	TESTPASS
	JUMP	TESTFAIL
